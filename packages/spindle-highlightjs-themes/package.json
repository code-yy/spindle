{
  "name": "@openameba/spindle-highlightjs-themes",
  "version": "0.0.1",
  "description": "Spindle theme for Highlight.js",
  "license": "MIT",
  "files": [
    "spindle-light.css",
    "spindle-dark.css",
    "spindle-light.min.css",
    "spindle-dark.min.css"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "yarn lint && yarn test:a11y",
    "test:a11y": "acot run",
    "lint": "stylelint *.css",
    "minify": "csso spindle-light.css --output spindle-light.min.css && csso spindle-dark.css --output spindle-dark.min.css",
    "prepublishOnly": "yarn minify",
    "build:example": "npx rimraf public && npx cpx '*.{html,css,ico}' public",
    "predeploy": "yarn build:example",
    "deploy": "firebase deploy --only hosting",
    "serve": "npx serve"
  },
  "devDependencies": {
    "@acot/acot-config": "^0.0.11",
    "@acot/cli": "^0.0.11",
    "csso-cli": "^3.0.0",
    "firebase-tools": "^9.9.0",
    "puppeteer": "^8.0.0",
    "stylelint": "^13.12.0",
    "stylelint-config-standard": "^21.0.0"
  }
}
