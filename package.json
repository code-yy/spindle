{
  "name": "spindle",
  "private": true,
  "scripts": {
    "test": "run-p lint format test:packages",
    "test:packages": "lerna run test",
    "lint": "run-p lint:*",
    "lint:script": "eslint --cache .",
    "lint:yaml": "yamllint .github/workflows/*.yml",
    "lint:packages": "lerna run lint",
    "format": "prettier --check '**/*.{js,ts,tsx}'",
    "fix": "run-p fix:*",
    "fix:script": "eslint . --fix",
    "fix:packages": "lerna run format",
    "fix:format": "prettier --write '**/*.{js,ts,tsx}'",
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "prepare": "is-ci || husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@commitlint/config-lerna-scopes": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "5.30.6",
    "@typescript-eslint/parser": "5.30.6",
    "eslint": "7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "7.30.1",
    "husky": "^7.0.2",
    "is-ci": "^3.0.0",
    "lerna": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "2.0.5",
    "textlint": "^12.0.0",
    "textlint-rule-preset-ameba": "openameba/textlint-rule-preset-ameba",
    "typescript": "4.0.5",
    "yaml-lint": "^1.2.4"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/react/**",
      "**/@testing-library/**",
      "**/@storybook/**",
      "**/@types/**",
      "**/webpack/**",
      "**/babel-*/**",
      "**/@babel/**"
    ]
  }
}
